{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["DOM", "ES2017"],
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"]
    },
    "typeRoots": ["{workspace}/src/types", "./node_modules/@types"]
  }
}
